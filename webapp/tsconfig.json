{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "lib": ["es6", "dom", "dom.iterable", "esnext"],
    "skipLibCheck": true,
    "module": "esnext",
    // "moduleResolution": "node",
    // "types": ["node"],
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "allowJs": true,
  },
  "include": [
    "src/translations/*.json",
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.jsx",
    "types.d.ts"
  ]
}
