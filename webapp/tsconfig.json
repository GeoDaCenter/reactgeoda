{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "target": "es2020",
    "moduleResolution": "node",
    "noEmit": true,
    "incremental": true,
    "isolatedModules": true,
    "strict": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "lib": ["dom", "dom.iterable", "ESNext"],
    "module": "ESNext",
    "resolveJsonModule": true,
    "jsx": "preserve",
    // "allowJs": true,
    "allowJs": true,
    "baseUrl": ".",
    "paths": {
      "@kepler.gl/*": ["./kepler.gl/src/*/src"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "types.d.ts"],
  "exclude": ["**/node_modules/**", "kepler.gl"]
}
